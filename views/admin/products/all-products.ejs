<!DOCTYPE html>
<html lang="en">
  <%- include('../../shared/includes/head', {pageTitle: 'Add new Product'}) %>
  <head>
    <link rel="stylesheet" href="/styles/products.css" />
    <script src="/scripts/product-management.js" defer></script>
  </head>
  <body>
    <%- include('../../shared/includes/header') %>
    <Main>
      <section>
        <h1>All Products (Admin)</h1>
      </section>
      <section>
        <h2>Manage Products</h2>
        <p>
          <a href="/admin/products/new" class="btn">Add Product</a>
        </p>
      </section>
      <section>
        <ul id="products-grid">
          <% for(const product of products) {%>
          <li><%- include('includes/product-item', {product: product}) %></li>
          <% } %>
        </ul>
      </section>
    </Main>
  </body>
  <%- include('../../shared/includes/footer') %>
</html>
